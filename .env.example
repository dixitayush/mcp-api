# Configuration for MCP Mermaid ER Server

# ============================================================
# Mermaid Diagram Source
# ============================================================

# Path to a Mermaid ER diagram file (optional)
MERMAID_DIAGRAM_PATH=./examples/sample-er.mmd

# URL to fetch Mermaid ER diagram from (optional)
# MERMAID_DIAGRAM_URL=https://example.com/diagram.mmd

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# ============================================================
# Database Configuration (PostgreSQL)
# ============================================================

# Database host
DB_HOST=localhost

# Database port (default: 5432)
DB_PORT=5432

# Database name
DB_NAME=mydb

# Database user
DB_USER=postgres

# Database password
DB_PASSWORD=password

# ============================================================
# API Server Configuration
# ============================================================

# API type: rest, graphql, or both (default: rest)
API_TYPE=rest

# API server port (default: 3000)
API_PORT=3000

# API server host (default: 0.0.0.0)
API_HOST=0.0.0.0
